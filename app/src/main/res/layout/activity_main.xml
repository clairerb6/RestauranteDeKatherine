<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Menú - Restaurante Chileno"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Primer platillo row -->
    <ImageView
        android:id="@+id/imgPastel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Pastel de Choclo"
        android:src="@drawable/pastel_de_choclo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvNombrePastel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Pastel de Choclo"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/imgPastel"
        app:layout_constraintTop_toTopOf="@id/imgPastel" />

    <TextView
            android:id="@+id/tvPrecioPastel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12.000"
            app:layout_constraintStart_toEndOf="@id/imgPastel"
            app:layout_constraintTop_toBottomOf="@id/tvNombrePastel"
            android:layout_marginStart="8dp"/>

    <!-- Segundo platillo row -->

    <EditText
        android:id="@+id/etCantidadPastel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="0"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/imgPastel"
        app:layout_constraintTop_toBottomOf="@id/tvPrecioPastel" />

    <TextView
        android:id="@+id/tvSubtotalPastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Subtotal: $0"
        app:layout_constraintStart_toEndOf="@id/imgPastel"
        app:layout_constraintTop_toBottomOf="@id/etCantidadPastel" />

    <ImageView
        android:id="@+id/imgCazuela"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:contentDescription="Cazuela"
        android:src="@drawable/cazuela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPastel" />

    <TextView
        android:id="@+id/tvNombreCazuela"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Cazuela"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/imgCazuela"
        app:layout_constraintTop_toTopOf="@id/imgCazuela" />

    <TextView
            android:id="@+id/tvPrecioCazuela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10.000"
            app:layout_constraintStart_toEndOf="@id/imgCazuela"
            app:layout_constraintTop_toBottomOf="@id/tvNombreCazuela"
            android:layout_marginStart="8dp"/>

        <EditText
            android:id="@+id/etCantidadCazuela"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="0"
            app:layout_constraintTop_toBottomOf="@id/tvPrecioCazuela"
            app:layout_constraintStart_toEndOf="@id/imgCazuela"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/tvSubtotalCazuela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal: $0"
            app:layout_constraintTop_toBottomOf="@id/etCantidadCazuela"
            app:layout_constraintStart_toEndOf="@id/imgCazuela"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>

        <!-- Switch propina -->

    <!-- Totales (inferior) -->

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:checked="true"
        android:text="Agregar propina 10%"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgCazuela" />

    <TextView
            android:id="@+id/tvTotalSinPropina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total sin propina: $0"
            app:layout_constraintTop_toBottomOf="@id/switchPropina"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvMontoPropina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Propina (10%): $0"
            app:layout_constraintTop_toBottomOf="@id/tvTotalSinPropina"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvTotalConPropina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total con propina: $0"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvMontoPropina"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>